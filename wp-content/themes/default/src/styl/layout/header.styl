/***** Navigation (Desktop) *****/
.nav {

	text-align: right;

	ul {
		li {
			list-style: none;
			display inline-block
			a {
				text-decoration: none;
				color: darkGrey;
				transition: 0.4s ease;
				position relative

				&:after {
					content ''
					display block
					width 100%
					height 0px
					position absolute
					bottom -10px
					left 0px
					transition: 0.4s ease;
					background-color currentColor
				}

				&:hover {
					transition: 0.4s ease;
					color darken(darkGrey, 40%)

					&:after {
						content ''
						display block
						width 100%
						height 3px
						position absolute
						background-color currentColor
					}
				}
			}

			// First Sub Level

			&.menu-item-has-children {

				.sub-menu {
					display none
				}

				position relative

				&:hover {
					.sub-menu {
						display block
						position absolute
						bottom 0
						left 0

						.sub-menu {
							display none
						}


						&:hover {
							.sub-menu {
								display block
							}
						}
					}
				}
			}


		}
	}

	@media(max-width tablet) {
		position: absolute;
		background: red;
		width: 100vw;
		height 100%;
	}
}

.row {
	[class^=span] {
		&.nav {
			@media(max-width tablet) {
				position: absolute;
				background: red;
				width: 100vw;
				height 100%;
				margin-left 0px;
				margin-right: 0px;
				right -100vw;
				transition 0.5s ease-in-out
			}
		}

		&.open {
			@media(max-width tablet) {
				position: absolute;
				background: red;
				width: 100vw;
				height 100%;
				margin-left 0px;
				right 0vw;
				transition 0.5s ease-in-out
			}
		}
	}
}

.burger-menu {
	position: absolute;
	top: 0px;
	right: 20px;
	width: 30px
	height: 30px
	cursor: pointer;
	display:none;

	@media(max-width tablet) {
		display block
	}

	&.open {
		.burger {

			 background: rgba(111,111,111,.0);

			&:after {
				transform: rotate(-45deg);
				bottom: 0px;
			}

			&:before {
				transform: rotate(45deg);
				top: 0px;
			}
		}
	}
}

.burger {
	position: absolute;
	background: rgba(111,111,111,1);
	width: 100%;
	height: 5px
	top: 50%;
	right: 0px;
	margin-top: -5px;
	opacity: 1;
	transition: 0.4s ease-in-out

	&:before {
		position: absolute;
		background: rgba(111,111,111,1);
		width: 30px
		height: 5px
		top: 10px;
		content: "";
		display: block;
		transition: 0.4s ease-in-out
	}

	&:after {
		position: absolute;
		background: rgba(111,111,111,1);
		width: 30px
		height: 5px
		bottom: 10px;
		content: "";
		display: block;
		transition: 0.4s ease-in-out
	}
}

.header {
	.row {
		display: flex;
		align-items: center;
		justify-content: center;
	}
}

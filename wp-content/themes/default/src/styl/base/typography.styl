// Declare Font Family, Font Sizes for Global styles here

body {
	font-family: Arial, Helvetica, sans-serif;
}

html {
	font-size: 16px;
	font-weight: 100;
	line-height: 1.5rem;

	@media(max-width mobile) {
		font-size: 14px;
	}
}

h1, h2, h3, h4, h5, h6, p, ul, ol {
	margin-top: 0;
	margin-bottom: 1rem;
}

h1, h2, h3, h4, h5, h6 {
	margin-bottom: 1rem;
}

h1 {
	margin-bottom: 2rem;
}

h2 {
	margin-bottom: 1.5rem;
}

.container {
	max-width: containerWidth + gutterWidth
	padding-right: (gutterWidth / 2)
	padding-left: (gutterWidth / 2)
	margin-right: auto
	margin-left: auto
}

.container-fluid {
	padding-right: (gutterWidth / 2)
	padding-left: (gutterWidth / 2)
	margin-right: auto
	margin-left: auto
}

.row {
	margin-right: (gutterWidth / -2)
	margin-left: (gutterWidth / -2)
}

.col {
	display: inline-block
	vertical-align: top
	font-size: fontSize
	padding-left: (gutterWidth / 2)
	padding-right: (gutterWidth / 2)
}
